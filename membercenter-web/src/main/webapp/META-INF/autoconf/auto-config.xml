<?xml version="1.0" encoding="UTF-8"?>
<config>
    <group name="dubbo">
        <property name="zk.address" defaultValue="192.168.1.202:2181" description="dubbo注册的zookeeper地址"/>
        <property name="zk.port" defaultValue="-1" description="dubbo服务使用的端口号"/>
        <property name="export.dubbo.timeout" defaultValue="5000" description="activity提供dubbo服务的默认超时时间"/>
        <property name="export.dubbo.version" defaultValue="LATEST" description="activity暴露dubbo的版本号"/>
        <property name="dubbo.retries" defaultValue="0" description="dubbo调用不重试"/>
    	<property name="consumer.dubbo.timeout" defaultValue="5000" description="activity使用其他dubbo服务的超市时间"/>
        <property name="consumer.dubbo.check" defaultValue="false" description="activity启东时是否强依赖其他服务，如果true那么依赖的服务必须先启动；如果false,其他服务可以不存在，但是调用的时候，如果服务依然不存在，则报错"/>
    </group>
    <group name="activity">
    	<property name="app.name" defaultValue="activity" description="应用名称"/>
        <property name="act.log.home" defaultValue="/home/admin/logs/activity" description="activity日志输出目录"/>
        <property name="act.db.url"
                  defaultValue="jdbc:mysql://192.168.1.91:3306/activity?useUnicode=true&amp;amp;characterset=utf-8"
                  description="activity数据库链接url"/>
        <property name="act.db.username" defaultValue="root" description="数据库用户名"/>
        <property name="act.db.password" defaultValue="test" description="数据库密码"/>
        <property name="act.db.pool.minIdle" defaultValue="5" description="db最小空闲连接数"/>
        <property name="act.db.pool.maxIdle" defaultValue="30" description="db最大空闲连接数"/>
        <property name="act.db.pool.maxActive" defaultValue="100" description="db最大活跃连接数"/>
        
        <property name="redis.pool" defaultValue="rd01.mythicflora.com" description="redis配置"/>
    </group>
    <group name="mq">
        <property name="rocketmq.server.name" defaultValue="192.168.1.206:9876" description="rocketmq的注册中心地址"/>
    </group>
    
    <script>
        <generate template="config.properties" destfile="config.properties" charset="UTF-8"/>
        <generate template="logback.xml" destfile="WEB-INF/logback.xml" charset="UTF-8"/>
    </script>
</config>

