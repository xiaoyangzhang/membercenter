<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<bean id="userServiceRef" class="com.alibaba.dubbo.config.spring.ReferenceBean">
        <property name="interface" value="com.yimayhd.user.api.UserService"/>
        <property name="application" ref="dubboApplicationConfig"/>
        <property name="registry" ref="dubboRegistryConfig"/>
        <property name="timeout" value="5000"/>
        <property name="check" value="false"/>
        <property name="version" value="LATEST"/>
        <property name="retries" value="0"/>
    </bean>
	
	<bean id="dubboApplicationConfig" class="com.alibaba.dubbo.config.ApplicationConfig">
        <property name="name" value="sns"/>
    </bean>

    <bean id="dubboRegistryConfig" class="com.alibaba.dubbo.config.RegistryConfig">
        <property name="address" value="192.168.1.202:2181"/>
        <property name="protocol" value="zookeeper"/>
    </bean>
	
	<bean id="globalIdGenerator" class="com.alibaba.dubbo.config.spring.ReferenceBean">
		<property name="interface" value="com.yimayhd.idgen.IDGenService"/>
		<property name="application" ref="dubboApplicationConfig"/>
		<property name="registry" ref="dubboRegistryConfig"/>
		<property name="timeout" value="5000"/>
		<property name="check" value="false"/>
        <property name="version" value="LATEST"/>
        <property name="retries" value="0"/>
	</bean>

   
	<!-- 配置线程池 -->
	<bean id="threadPoolTaskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
		<!-- 线程池维护线程的最少数量 -->
		<property name="corePoolSize" value="5" />
		<!-- 线程池维护线程所允许的空闲时间 10分钟-->
		<property name="keepAliveSeconds" value="600" />
		<!-- 线程池维护线程的最大数量 -->
		<property name="maxPoolSize" value="60" />
		<!-- 线程池所使用的缓冲队列 -->
		<property name="queueCapacity" value="20" />
	</bean>
    
